<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/translateFragment">

    <fragment
        android:id="@+id/favouriteFragment"
        android:name="com.apextech.bexatobotuz.ui.screen.history.HistoryFragment"
        android:label="fragment_favourite"
        tools:layout="@layout/fragment_history" />

    <fragment
        android:id="@+id/translateFragment"
        android:name="com.apextech.bexatobotuz.ui.screen.translate.TranslateFragment"
        android:label="fragment_translate"
        tools:layout="@layout/fragment_translate">
        <action
            android:id="@+id/action_translateFragment_to_favouriteFragment"
            app:destination="@id/favouriteFragment" />
        <action
            android:id="@+id/action_translateFragment_to_infoFragment"
            app:destination="@id/infoFragment" />
    </fragment>
    <fragment
        android:id="@+id/infoFragment"
        android:name="com.apextech.bexatobotuz.ui.screen.info.InfoFragment"
        android:label="fragment_info"
        tools:layout="@layout/fragment_info" />
</navigation>